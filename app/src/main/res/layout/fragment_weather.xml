<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:orientation="vertical"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
        android:id="@+id/temperatureTextView"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:textColor="#FF0055"
        android:textSize="80sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="49dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.082"/>

    <TextView
        style="@style/WeatherParameters_Style"
        android:text="@string/pressure"
        android:id="@+id/textView3"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:layout_marginStart="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/temperatureTextView"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/temperatureTextView"/>

    <TextView
        android:id="@+id/pressureTextView"
        style="@style/WeatherParameters_Style"
        app:layout_constraintTop_toTopOf="@+id/textView3"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toRightOf="@+id/textView3"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toLeftOf="@+id/textView4"
        android:layout_marginRight="8dp"/>

    <TextView
        style="@style/WeatherParameters_Style"
        android:text="@string/humidity"
        android:id="@+id/textView4"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/temperatureTextView"
        app:layout_constraintRight_toLeftOf="@+id/humidityTextView"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/humidityTextView"
        style="@style/WeatherParameters_Style"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView4"
        />

    <TextView
        style="@style/WeatherParameters_Style"
        android:text="@string/wind"
        android:id="@+id/textView9"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:layout_marginStart="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView4"/>

    <TextView
        android:id="@+id/windTextView"
        style="@style/WeatherParameters_Style"
        android:layout_marginStart="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/humidityTextView"
        app:layout_constraintBottom_toBottomOf="@+id/textView9"
        android:layout_marginBottom="0dp"/>

    <TextView
        style="@style/WeatherParameters_Style"
        android:text="@string/visibility"
        android:id="@+id/textView8"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        android:layout_marginStart="-4dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView3"/>

    <TextView
        android:id="@+id/visibilityTextView"
        style="@style/WeatherParameters_Style"
        app:layout_constraintBottom_toBottomOf="@+id/textView8"
        android:layout_marginBottom="0dp"
        app:layout_constraintLeft_toRightOf="@+id/textView8"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toLeftOf="@+id/textView9"
        android:layout_marginRight="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/city_name"
        android:textSize="24sp"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/temperatureTextView"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginStart="24dp"
        android:id="@+id/textView10"

        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        style="@style/WeatherParameters_Style"
        android:text="@string/min_temp"
        app:layout_constraintLeft_toRightOf="@+id/temperatureTextView"
        app:layout_constraintTop_toBottomOf="@+id/tempMaxTextView"
        android:id="@+id/textView7"
        android:layout_marginStart="8dp"/>
    <TextView
        style="@style/WeatherParameters_Style"
        android:text="@string/max_temp"
        app:layout_constraintLeft_toRightOf="@+id/temperatureTextView"
        android:id="@+id/textView5"
        app:layout_constraintTop_toTopOf="@+id/temperatureTextView"
        android:layout_marginStart="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#FF0999"
        app:layout_constraintLeft_toRightOf="@+id/temperatureTextView"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        android:id="@+id/tempMaxTextView"
        android:layout_marginStart="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/tempMinTextView"
        android:textColor="#FF9999"
        app:layout_constraintLeft_toRightOf="@+id/temperatureTextView"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        android:layout_marginStart="8dp"/>

    <TextView
        style="@style/WeatherParameters_Small_Style"
        android:text="@string/last_update"
        android:layout_marginStart="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView5"
        app:layout_constraintBottom_toBottomOf="@+id/textView10"
        android:layout_marginBottom="8dp"
        android:id="@+id/textView6"/>

    <TextView
        android:id="@+id/lastUpdateWeatherTextView"
        style="@style/WeatherParameters_Small_Style"
        app:layout_constraintLeft_toRightOf="@+id/textView6"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/textView6"
        android:layout_marginTop="0dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/update_button"
        android:id="@+id/getDataButton"
        android:onClick="getData"
        android:background="#9d31ff49"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView8"/>
</android.support.constraint.ConstraintLayout>
